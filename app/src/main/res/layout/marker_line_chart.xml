<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/lay_content"
    android:layout_width="wrap_content"
    android:background="@drawable/bg_content_line_chart"
    android:layout_marginBottom="@dimen/dp10"
    android:gravity="center"
    android:paddingStart="@dimen/dp15"
    android:paddingEnd="@dimen/dp15"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="fgfdgfgg"
        android:textSize="@dimen/size_15sp"
        android:textColor="@color/colorWhite"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_point"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="@dimen/dp6"
        card_view:cardElevation="@dimen/dp6"
        android:layout_margin="@dimen/dp1"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/size_12sp"
            android:layout_margin="@dimen/dp1"
            android:layout_height="@dimen/size_12sp"
            android:background="@drawable/bg_point"/>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/lay_BottomContent"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_bottom_content_line_chart"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp85"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBottomContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fgfdgfgg"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/color_content_chart"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>


</LinearLayout>