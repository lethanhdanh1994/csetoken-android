<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimary"
    android:id="@+id/ab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/btn_backToolbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp15"
            android:src="@drawable/ic_back"
            />
        <TextView
            android:id="@+id/tv_titleToolbar"
            android:textSize="@dimen/sp20"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_weight="8"
            android:layout_marginEnd="@dimen/dp30"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Confirm Send"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_amountTool"
                android:layout_marginTop="@dimen/dp15"
                android:textSize="@dimen/sp27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0.00123 BTC"
                />

            <TextView
                android:id="@+id/tv_usdTool"
                android:layout_marginBottom="@dimen/dp20"
                android:textStyle="italic"
                android:textSize="@dimen/sp17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="$100 USD"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:background="@drawable/custom_background2">

            <TextView
                android:id="@+id/confirmdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="Confirm Send Details"
                android:textSize="@dimen/sp15" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_below="@id/confirmdetails"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="#dcf4fe" />

            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/line"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="#cdf0fe">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="To"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="asdasdasd@gmail.com"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/rela1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="#dcf4fe">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="From"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="BTC Wallet"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/rela2"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="#cdf0fe">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="Total"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="0.034123"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="$123"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/rela3"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="#dcf4fe">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="@string/Fee"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp10"
                    android:text="Note here"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rela5"
                android:background="@drawable/bg_sent_lay"
                android:layout_below="@id/rela4"
                android:layout_margin="@dimen/dp10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@null"
                    android:hint="@string/google_2fa_code"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/sp13" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rela5"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_custom_button_back"
                    android:text="Go Back"
                    android:textSize="@dimen/sp13" />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1"
                    android:background="@drawable/bg_custom_button_submit"
                    android:text="Confirm"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp13" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>